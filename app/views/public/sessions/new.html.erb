<div class="container">
  <div class="row my-4 ml-5">
    <h2>ログイン</h2>
   </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
         <div class="d-flex justify-content-start col-8 mx-auto">
          <p class="col-3"><%= f.label :ユーザーネーム %></p><br />
          <p class="col-6"><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form-control input-md" %></p>
         </div>
        </div>
      
        <div class="field">
         <div class="d-flex justify-content-start col-8 mx-auto">
          <p class="col-3"><%= f.label :パスワード %></p><br />
          <p class="col-6"><%= f.password_field :password, autocomplete: "current-password", class: "form-control input-md" %></p>
         </div>
        </div>
      
        <div class="d-flex justify-content-start col-8 mx-auto">
         <p class="col-3"></p>
         <p class="col-6"><%= f.submit "ログイン",class: "btn btn-primary" %></p>
        </div>
      <% end %>
</div>
      <%#= render "public/shared/links" %>
