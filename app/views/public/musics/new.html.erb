<div class="container">
   <% if @music.errors.any? %>
      <div>
        <ul style="color: red">
          <% @music.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
   <% end %>
        <%= form_with model: Music.new do |f| %>
        　<div class="text-center m-4">
            <%= f.label :音源をアップロード %><br /><br />
            <%= f.file_field :audio %>
          </div>
          <div class="form-group m-2">
            <%= f.label :タイトル %>
            <%= f.text_field :name , class:"form-control" %>
          </div>
　　　　　<div class="form-group m-2">
            <%= f.label :説明 %>
            <%= f.text_area :explanation , class:"form-control" %>
          </div>
          <div class="text-center m-4">
            <%= f.label :楽曲の画像 %></br><br />
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="text-center m-5">
            <%= f.submit '投稿する！', class:"btn btn-primary" %>
          </div>
        <% end %>
  </div>
</div>
