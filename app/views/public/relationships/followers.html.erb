<% if @users.exists? %>
<% @users.each do |user| %>
<div class="container">
 <div class="text-center m-4">
    <% if user.image.attached? %>
     <%= image_tag user.image, size: "100x100", class: "rounded mx-auto mb-2" %>
    <% else %>
     <%= image_tag 'logo2.jpg', size: "100x100", class: "rounded mx-auto mb-2" %>
    <% end %>
      <h5>ユーザー名</h6>
      <%= user.user_name %>
 </div>
</div>
<% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
