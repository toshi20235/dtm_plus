<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
     <%= form_with model: @user do |f| %>
      <div class="display-5 fw-bold text-body-emphasis lh-1 mb-3 text-center">
        <div class="m-2">ユーザーネーム</div>
        <%= f.text_field :user_name , class:"form-control"%></label>
      </div>
      <div class="display-5 fw-bold text-body-emphasis lh-1 mb-3 text-center">
       <div class="m-2">Eメール</div>
       <%= f.text_field :email , class:"form-control" %>
      </div>
      <div class="display-5 fw-bold text-body-emphasis lh-1 mb-3 text-center">
        <div class="m-2 pt-5">プロフィール画像</div>
        <%= f.file_field :image, accept: "image/*" %>
     </div>
     <div class= "pt-3 text-center">
        <%= f.submit "変更を保存", class:"btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
    <p><%= link_to "退会する", users_quit_path, class: "btn btn-danger" %></p>
  </div>
</div>
